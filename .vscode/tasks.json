{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd zephyr && source zephyr-env.sh && cd ../build/lte_console && ninja all",
            "problemMatcher": []
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "cd zephyr && source zephyr-env.sh && cd ../build/lte_console && ninja flash",
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cd zephyr && source zephyr-env.sh && cd ../build/lte_console && ninja clean",
            "problemMatcher": []
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "mkdir build/lte_console -p && cd zephyr && source zephyr-env.sh && cd ../build/lte_console && rm -rf * && cmake -GNinja ../../apps/lte_console",
            "problemMatcher": []
        }
    ]
}
