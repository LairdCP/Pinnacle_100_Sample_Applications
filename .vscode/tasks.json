{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd zephyr && source zephyr-env.sh && cd ../build/lte_console && ninja all",
            "problemMatcher": []
        },
        {
            "label": "flash MBR",
            "type": "shell",
            "command": "cd nordic && nrfjprog -f NRF52 --program s140_nrf52_6.1.0_MBR_only.hex --sectorerase --reset",
            "problemMatcher": []
        },
        {
            "label": "flash application",
            "type": "shell",
            "command": "cd zephyr && source zephyr-env.sh && cd ../build/lte_console && ninja flash && nrfjprog -f NRF52 --reset",
            "problemMatcher": []
        },
        {
            "label": "flash MBR + application",
            "type": "shell",
            "command": "cd nordic && nrfjprog -f NRF52 --program s140_nrf52_6.1.0_MBR_only.hex --sectorerase && cd .. && cd zephyr && source zephyr-env.sh && cd ../build/lte_console && ninja flash && nrfjprog -f NRF52 --reset",
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cd zephyr && source zephyr-env.sh && cd ../build/lte_console && ninja clean",
            "problemMatcher": []
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "mkdir build/lte_console -p && cd zephyr && source zephyr-env.sh && cd ../build/lte_console && rm -rf * && cmake -GNinja ../../apps/lte_console",
            "problemMatcher": []
        }
    ]
}
