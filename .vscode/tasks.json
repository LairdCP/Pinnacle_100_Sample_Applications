{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "windows": {
    "options": {
      "shell": {
        "executable": "cmd.exe",
        "args": [
          "/d",
          "/c"
        ]
      }
    }
  },
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}/build/${input:buildApp} ${workspaceRoot}/${input:buildApp}",
      "windows": {
        "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build\\${input:buildApp} ${workspaceRoot}\\${input:buildApp}"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "build with mcumgr",
      "type": "shell",
      "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}/build/${input:buildApp} ${workspaceRoot}/${input:buildApp} -- -DCONF_FILE=\"${workspaceRoot}/${input:buildApp}/prj.conf ${workspaceRoot}/../modules/zephyr_lib/mcumgr_wrapper/config/overlay-qspi-bt.conf ${workspaceRoot}/../modules/zephyr_lib/mcumgr_wrapper/config/overlay-simple-bluetooth.conf\"",
      "windows": {
        "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build\\${input:buildApp} ${workspaceRoot}\\${input:buildApp} -- -DCONF_FILE=\"${workspaceRoot}\\${input:buildApp}\\prj.conf ${workspaceRoot}\\..\\modules\\zephyr_lib\\mcumgr_wrapper\\config\\overlay-qspi-bt.conf ${workspaceRoot}\\..\\modules\\zephyr_lib\\mcumgr_wrapper\\config\\overlay-simple-bluetooth.conf\""
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "build mcuboot",
      "type": "shell",
      "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}/build/mcuboot ${workspaceRoot}/../bootloader/mcuboot/boot/zephyr -- -DCONF_FILE=\"${workspaceRoot}/../modules/zephyr_lib/mcuboot_config/mcuboot-qspi.conf ${workspaceRoot}/../modules/zephyr_lib/mcuboot_config/overlay-disable-hl7800-modem.conf\"",
      "windows": {
        "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build\\mcuboot ${workspaceRoot}\\..\\bootloader\\mcuboot\\boot\\zephyr -- -DCONF_FILE=\"${workspaceRoot}\\..\\modules\\zephyr_lib\\mcuboot_config\\mcuboot-qspi.conf ${workspaceRoot}\\..\\modules\\zephyr_lib\\mcuboot_config\\overlay-disable-hl7800-modem.conf\""
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "re-build",
      "type": "shell",
      "command": "west build -p -b pinnacle_100_dvk -d build/${input:buildApp} ${input:buildApp}",
      "windows": {
        "command": "west build -p -b pinnacle_100_dvk -d ${workspaceRoot}\\build\\${input:buildApp} ${workspaceRoot}\\${input:buildApp}"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "build pca10056",
      "type": "shell",
      "command": "west build -p -b nrf52840_pca10056 -d build/${input:buildApp} ${input:buildApp}",
      "windows": {
        "command": "west build -p -b nrf52840_pca10056 -d ${workspaceRoot}\\build\\${input:buildApp} ${workspaceRoot}\\${input:buildApp}"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "flash application",
      "type": "shell",
      "command": "west flash -d build/${input:buildApp}",
      "windows": {
        "command": "west flash -d ${workspaceRoot}\\build\\${input:buildApp}"
      },
      "problemMatcher": []
    },
    {
      "label": "flash mcuboot",
      "type": "shell",
      "command": "west flash -d build/mcuboot",
      "windows": {
        "command": "west flash -d ${workspaceRoot}\\build\\mcuboot"
      },
      "problemMatcher": []
    },
    {
      "label": "flash signed",
      "type": "shell",
      "command": "west flash -d build/${input:buildApp} --skip-rebuild --hex-file build/${input:buildApp}/zephyr/zephyr.signed.hex",
      "windows": {
        "command": "west flash -d ${workspaceRoot}\\build\\${input:buildApp} --skip-rebuild --hex-file ${workspaceRoot}\\build\\${input:buildApp}\\zephyr\\zephyr.signed.hex"
      },
      "problemMatcher": []
    },
    {
      "label": "sign",
      "type": "shell",
      "command": "west sign -d build/${input:buildApp} -t imgtool -- --key ${workspaceRoot}/../bootloader/mcuboot/root-rsa-2048.pem",
      "windows": {
        "command": "west sign -d ${workspaceRoot}\\build\\${input:buildApp} -t imgtool -- --key ${workspaceRoot}\\..\\bootloader\\mcuboot\\root-rsa-2048.pem"
      },
      "problemMatcher": []
    },
    {
      "label": "flash MBR",
      "type": "shell",
      "command": "cd nordic && nrfjprog -f NRF52 --program s140_nrf52_6.1.0_MBR_only.hex --sectorerase --reset",
      "problemMatcher": []
    },
    {
      "label": "flash MBR + application",
      "type": "shell",
      "command": "cd nordic && nrfjprog -f NRF52 --program s140_nrf52_6.1.0_MBR_only.hex --sectorerase && cd .. && source ../zephyr/zephyr-env.sh && west flash -d build/${input:buildApp} && nrfjprog -f NRF52 --reset",
      "problemMatcher": []
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "west build -t clean -d build/${input:buildApp}",
      "windows": {
        "command": "west build -t clean -d ${workspaceRoot}\\build\\${input:buildApp}"
      },
      "problemMatcher": []
    },
    {
      "label": "pristine",
      "type": "shell",
      "command": "west build -t pristine -d build/${input:buildApp}",
      "windows": {
        "command": "west build -t pristine -d ${workspaceRoot}\\build\\${input:buildApp}"
      },
      "problemMatcher": []
    },
    {
      "label": "update Zephyr deps",
      "type": "shell",
      "command": "sudo pip3 install -r ${workspaceRoot}/../zephyr/scripts/requirements.txt",
      "problemMatcher": []
    },
    {
      "label": "build sign flash",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "build-with-mcumgr",
        "sign",
        "flash signed"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "buildApp",
      "description": "Select an app to build",
      "default": "apps/lte_console",
      "type": "pickString",
      "options": [
        "apps/lte_console",
        "apps/low_power",
        "tests/udp_echo_client",
        "tests/http_get",
        "tests/tcp_echo_client",
        "tests/aws_connect",
        "tests/coap_dtls",
        "tests/synchronization",
        "tests/edrx_tcp_server_reply"
      ]
    }
  ]
}