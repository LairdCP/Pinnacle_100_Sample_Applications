{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "windows": {
    "options": {
      "shell": {
        "executable": "cmd.exe",
        "args": ["/d", "/c"]
      }
    }
  },
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}/build/${input:buildApp} ${workspaceRoot}/${input:buildApp}",
      "windows": {
        "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build\\${input:buildApp} ${workspaceRoot}\\${input:buildApp}"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "build for mcuboot",
      "type": "shell",
      "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}/build/${input:buildApp} ${workspaceRoot}/${input:buildApp} -- -DCONF_FILE=\"${workspaceRoot}/${input:buildApp}/prj.conf ${config:app_mcuboot_config_unix}\"",
      "windows": {
        "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build\\${input:buildApp} ${workspaceRoot}\\${input:buildApp} -- -DCONF_FILE=\"${workspaceRoot}\\${input:buildApp}\\prj.conf ${config:app_mcuboot_config_windows}\""
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "build mcuboot",
      "type": "shell",
      "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}/build/mcuboot ${workspaceRoot}/../bootloader/mcuboot/boot/zephyr -- -DCONF_FILE=\"${config:mcuboot_config_unix}\"",
      "windows": {
        "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build\\mcuboot ${workspaceRoot}\\..\\bootloader\\mcuboot\\boot\\zephyr -- -DCONF_FILE=\"${config:mcuboot_config_windows}\""
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "re-build",
      "type": "shell",
      "command": "west build -p -b pinnacle_100_dvk -d build/${input:buildApp} ${input:buildApp}",
      "windows": {
        "command": "west build -p -b pinnacle_100_dvk -d ${workspaceRoot}\\build\\${input:buildApp} ${workspaceRoot}\\${input:buildApp}"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "build for pca10056",
      "type": "shell",
      "command": "west build -p -b nrf52840_pca10056 -d build/${input:buildApp} ${input:buildApp}",
      "windows": {
        "command": "west build -p -b nrf52840_pca10056 -d ${workspaceRoot}\\build\\${input:buildApp} ${workspaceRoot}\\${input:buildApp}"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "flash application",
      "type": "shell",
      "command": "west flash -d build/${input:buildApp}",
      "windows": {
        "command": "west flash -d ${workspaceRoot}\\build\\${input:buildApp}"
      },
      "problemMatcher": []
    },
    {
      "label": "flash mcuboot",
      "type": "shell",
      "command": "west flash -d build/mcuboot",
      "windows": {
        "command": "west flash -d ${workspaceRoot}\\build\\mcuboot"
      },
      "problemMatcher": []
    },
    {
      "label": "flash signed",
      "type": "shell",
      "command": "west flash -d build/${input:buildApp} --hex-file build/${input:buildApp}/zephyr/zephyr.signed.hex",
      "windows": {
        "command": "west flash -d ${workspaceRoot}\\build\\${input:buildApp} --hex-file ${workspaceRoot}\\build\\${input:buildApp}\\zephyr\\zephyr.signed.hex"
      },
      "problemMatcher": []
    },
    {
      "label": "sign",
      "type": "shell",
      "command": "west sign -d build/${input:buildApp} -t imgtool -- --key ${workspaceRoot}/../bootloader/mcuboot/root-rsa-2048.pem",
      "windows": {
        "command": "west sign -d ${workspaceRoot}\\build\\${input:buildApp} -t imgtool -- --key ${workspaceRoot}\\..\\bootloader\\mcuboot\\root-rsa-2048.pem"
      },
      "problemMatcher": []
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "west build -t clean -d build/${input:buildApp}",
      "windows": {
        "command": "west build -t clean -d ${workspaceRoot}\\build\\${input:buildApp}"
      },
      "problemMatcher": []
    },
    {
      "label": "pristine",
      "type": "shell",
      "command": "west build -t pristine -d build/${input:buildApp}",
      "windows": {
        "command": "west build -t pristine -d ${workspaceRoot}\\build\\${input:buildApp}"
      },
      "problemMatcher": []
    },
    {
      "label": "update Zephyr deps",
      "type": "shell",
      "command": "sudo pip3 install -r ${workspaceRoot}/../zephyr/scripts/requirements.txt",
      "problemMatcher": []
    },
    {
      "label": "build sign flash",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": ["build for mcuboot", "sign", "flash signed"],
      "problemMatcher": []
    },
    {
      "label": "menuconfig",
      "type": "shell",
      "command": "west build -t menuconfig -d ${workspaceFolder}/build/${input:buildApp} ${workspaceFolder}/${input:buildApp}",
      "windows": {
        "command": "west build -t menuconfig -d ${workspaceFolder}\\build\\${input:buildApp} ${workspaceFolder}\\${input:buildApp}"
      },
      "problemMatcher": []
    },
    {
      "label": "mcumgr upload signed app",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} image upload ${workspaceFolder}/build/${input:app}/zephyr/zephyr.signed.bin",
      "problemMatcher": []
    },
    {
      "label": "mcumgr list images",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} image list",
      "problemMatcher": []
    },
    {
      "label": "mcumgr test image",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} image test ${input:image-hash}",
      "problemMatcher": []
    },
    {
      "label": "mcumgr reset",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} reset",
      "problemMatcher": []
    },
    {
      "label": "mcumgr confirm",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} image confirm",
      "problemMatcher": []
    },
    {
      "label": "mcumgr echo",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} echo 'hello'",
      "problemMatcher": []
    },
    {
      "label": "mcumgr upload to fs",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} fs upload ${input:src_file} ${input:dst_file}",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "buildApp",
      "description": "Select an app to build",
      "default": "apps/lte_console",
      "type": "pickString",
      "options": [
        "apps/lte_console",
        "apps/low_power",
        "tests/udp_echo_client",
        "tests/http_get",
        "tests/tcp_echo_client",
        "tests/aws_connect",
        "tests/coap_dtls",
        "tests/synchronization",
        "tests/edrx_tcp_server_reply"
      ]
    },
    {
      "id": "mcumgr_cnx",
      "description": "mcumgr connection params",
      "type": "pickString",
      "options": [
        // Change 'peer_name=' to match your device name
        "--conntype ble --connstring ctlr_name=hci0,peer_name='Zephyr'",
        // Change 'dev=' to match your serial device
        "--conntype serial --connstring dev=/dev/tty.usbserial-A908JLEI"
      ]
    },
    {
      "id": "image-hash",
      "description": "hash of firmware image",
      "type": "promptString",
      "default": "enter hash here"
    },
    {
      "id": "app_ver",
      "description": "firmware version",
      "type": "promptString"
    },
    {
      "id": "src_file",
      "description": "file",
      "type": "promptString"
    },
    {
      "id": "dst_file",
      "description": "file",
      "type": "promptString"
    }
  ]
}
