    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd zephyr && source zephyr-env.sh && cd ../build && ninja all",
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cd zephyr && source zephyr-env.sh && cd ../build && ninja clean",
            "problemMatcher": []
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cd zephyr && source zephyr-env.sh && cd ../build && rm -rf * && cmake -GNinja ../app",
            "problemMatcher": []
        }
    ]
}
