/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>

/ {
	model = "Sirrus 100 Dev Kit";
	compatible = "laird,sirrus100-dvk", "nordic,nrf52840-qiaa",
		     "nordic,nrf52840";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

	leds {
		compatible = "gpio-leds";
		led1: led_1 {
			gpios = <&gpio1 4 GPIO_INT_ACTIVE_HIGH>;
			label = "Blue LED 1";
		};
		led2: led_2 {
			gpios = <&gpio1 5 GPIO_INT_ACTIVE_HIGH>;
			label = "Green LED 2";
		};
		led3: led_3 {
			gpios = <&gpio1 6 GPIO_INT_ACTIVE_HIGH>;
			label = "Red LED 3";
		};
		led4: led_4 {
			gpios = <&gpio1 7 GPIO_INT_ACTIVE_HIGH>;
			label = "Green LED 4";
		};
	};

	buttons {
		compatible = "gpio-keys";
		button1: button_1 {
			gpios = <&gpio0 24 GPIO_PUD_PULL_UP>;
			label = "Push button switch 1";
		};
		button2: button_2 {
			gpios = <&gpio0 25 GPIO_PUD_PULL_UP>;
			label = "Push button switch 2";
		};
		button3: button_3 {
			gpios = <&gpio1 8 GPIO_PUD_PULL_UP>;
			label = "Push button switch 3";
		};
		button4: button_4 {
			gpios = <&gpio1 11 GPIO_PUD_PULL_UP>;
			label = "Push button switch 4";
		};
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led1 = &led1;
		led2 = &led2;
		led3 = &led3;
		led4 = &led4;
		sw1 = &button1;
		sw2 = &button2;
		sw3 = &button3;
		sw4 = &button4;
	};
};

&adc {
	status ="ok";
};

&gpiote {
	status ="ok";
};

&gpio0 {
	status ="ok";
};

&gpio1 {
	status ="ok";
};

&uart0 {
	compatible = "nordic,nrf-uart";
	current-speed = <115200>;
	status = "ok";
	tx-pin = <6>;
	rx-pin = <8>;
	rts-pin = <5>;
	cts-pin = <7>;
};

&uart1 {
	current-speed = <115200>;
	status = "ok";
	tx-pin = <14>;
	rx-pin = <16>;
	rts-pin = <13>;
	cts-pin = <15>;
	hl7800 {
		compatible = "swi,hl7800";
		label = "hl7800";
		mdm-reset-gpios = <&gpio1 15 0>;
		mdm-wake-gpios = <&gpio1 13 0>;
		mdm-pwr-on-gpios = <&gpio1 2 0>;
		mdm-fast-shutd-gpios = <&gpio1 14 0>;
		mdm-uart-dtr-gpios = <&gpio0 31 0>;
		mdm-lte-tx-on-gpios = <&gpio1 3 0>;
		mdm-gps-ext-lna-en-gpios = <&gpio1 12 0>;
		mdm-uart-cts-gpios = <&gpio0 15 0>;
		mdm-vgpio-gpios = <&gpio1 11 0>;  // Set to button 4 GPIO for now because of easy board mod.  Change this later
		status = "ok";
	};    
};

&i2c0 {
	status = "ok";
	sda-pin = <26>;
	scl-pin = <27>;
};

&spi0 {
	status = "ok";
	sck-pin = <19>;
	mosi-pin = <20>;
	miso-pin = <21>;
	cs-gpios = <&gpio0 17 0>;
	mx25r6435f@0 {
		compatible = "winbond,w25q16", "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <80000000>;
		label = "MX25R64";
		jedec-id = <0xc2 0x28 0x17>;
		size = <67108864>;
		wp-gpios = <&gpio0 22 0>;
		hold-gpios = <&gpio0 23 0>;
	};
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/devices/dts/flash_partitions.html
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		//Bootloader
		boot_partition: partition@f2000 {
			label = "mcuboot";
			reg = <0x000f2000 0x0000C000>;
		};

		//Zephyr application
		slot0_partition: partition@1000 {
			label = "image-0";
			reg = <0x00001000 0x00060000>;
		};

		scratch_partition: partition@b3000 {
			label = "image-scratch";
			reg = <0x000b3000 0x00001000>;

		};

#if defined(CONFIG_FS_FLASH_MAP_STORAGE)
		storage_partition: partition@fc000 {
			label = "storage";
			reg = <0x000fc000 0x00004000>;
		};
#endif
	};
};

&usbd {
	compatible = "nordic,nrf-usbd";
	status = "ok";
};
